  "components": {
    "schemas": {
      "InscripcionExamenDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fechaExamen": {
            "type": "string",
            "format": "date-time"
          },
          "fechaLimiteCancelacion": {
            "type": "string",
            "format": "date-time"
          },
          "codigo": {
            "type": "string",
            "nullable": true
          },
          "usuarioId": {
            "type": "string",
            "nullable": true
          },
          "examenId": {
            "type": "integer",
            "format": "int32"
          },
          "nombreExamen": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginResponseDTO": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginUsuarioViewModel": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      },
      "RegistroUsuarioViewModel": {
        "required": [
          "confirmPassword",
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "maxLength": 100,
            "minLength": 6,
            "type": "string",
            "format": "password"
          },
          "confirmPassword": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      },
      "UsuarioDTO": {
        "required": [
          "apellidos",
          "curp",
          "direccion",
          "fechaDeNacimiento",
          "genero",
          "modalidad",
          "nombres",
          "telefono"
        ],
        "type": "object",
        "properties": {
          "nombres": {
            "maxLength": 25,
            "minLength": 0,
            "type": "string"
          },
          "apellidos": {
            "maxLength": 25,
            "minLength": 0,
            "type": "string"
          },
          "fechaDeNacimiento": {
            "type": "string",
            "format": "date"
          },
          "direccion": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "genero": {
            "minLength": 1,
            "type": "string"
          },
          "curp": {
            "minLength": 1,
            "pattern": "^[A-Z]{4}\\d{6}[HM][A-Z]{5}[A-Z0-9]\\d$",
            "type": "string"
          },
          "telefono": {
            "minLength": 1,
            "pattern": "^\\d{10}$",
            "type": "string"
          },
          "modalidad": {
            "minLength": 1,
            "type": "string"
          },
          "asistencia": {
            "type": "boolean"
          },
          "descripcionPersonal": {
            "type": "string",
            "nullable": true
          },
          "horarioPreferencia": {
            "type": "string",
            "nullable": true
          },
          "variosExamenes": {
            "type": "boolean"
          },
          "examenesSeleccionados": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
